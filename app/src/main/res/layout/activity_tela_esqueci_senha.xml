<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/fundo_moderno"
    tools:context=".TelaEsqueciSenha">

    <!-- Título -->
    <TextView
        android:id="@+id/tituloRecuperarSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar Senha"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <!-- Campo CPF -->
    <EditText
        android:id="@+id/campoCpfRecuperar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Digite seu CPF"
        android:inputType="number"
        android:maxLength="11"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tituloRecuperarSenha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botão Recuperar -->
    <Button
        android:id="@+id/botaoRecuperarSenha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recuperar Senha"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/campoCpfRecuperar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botão Voltar ao Login -->
    <Button
        android:id="@+id/botaoVoltarLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voltar para Login"
        android:textAllCaps="false"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/botaoRecuperarSenha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
